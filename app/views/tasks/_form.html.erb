<%= form_with(model: @task, remote: true) do |form| %>
  
  <div class="form-group">
    <%= form.text_area :description, placeholder: "Describe your task!", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.text_field :deadline, id: "datetimepicker1", placeholder: "When's it done?", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.button :Submit, class: "btn btn-primary" %>
  </div>
<% end %>
